                android:layout_height="wrap_content"
                android:layout_below="@+id/cardName"
                android:layout_alignEnd="@+id/cardName"
                android:layout_alignRight="@+id/cardName"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="-26dp"
                android:layout_marginRight="-26dp"
                android:layout_marginBottom="6dp"
                android:text="Expiration date : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ivCardLogo"
                android:layout_alignRight="@+id/ivCardLogo"
                android:layout_marginEnd="-233dp"
                android:layout_marginRight="-233dp"
                android:text="MasterCard"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/exp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardName"
                android:layout_alignEnd="@+id/cardName"
                android:layout_alignRight="@+id/cardName"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="-102dp"
                android:layout_marginRight="-102dp"
                android:text="6 / 22"
                android:textSize="18sp"
                android:textColor="#000"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

