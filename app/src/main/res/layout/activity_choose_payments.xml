                android:layout_alignEnd="@+id/ivCardLogo"
                android:layout_alignRight="@+id/ivCardLogo"
                android:layout_marginEnd="-121dp"
                android:layout_marginRight="-121dp"
                android:text="Card Name : "
                android:textSize="18sp" />

            <TextView
