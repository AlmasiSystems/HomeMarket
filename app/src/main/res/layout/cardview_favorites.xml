<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cvFruits_Legumes"
    android:layout_width="387dp"
    android:layout_height="95dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:padding="5dp"

    cardview:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="95dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="98dp"
            android:layout_height="93dp"
            android:background="#000000"
            android:scaleType="fitXY" />

        <ToggleButton
            android:id="@+id/favoritesBtn"
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/tvName"
            android:layout_alignRight="@+id/imageView"
            android:layout_marginRight="-272dp"
            android:layout_marginBottom="-60dp"
            android:background="@drawable/ic_favorite_black_24dp"
            android:textOff=""
            android:textOn="" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_marginEnd="-88dp"
            android:layout_marginRight="-88dp"
            android:text="Pommes"
            android:textColor="#C8020E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginEnd="-96dp"
            android:layout_marginRight="-96dp"
            android:layout_marginBottom="41dp"
            android:numStars="5"
            android:outlineAmbientShadowColor="@color/colorPrimary"/>


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="109dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="-45dp"
            android:layout_marginRight="-45dp"
            android:gravity="center"
            android:text="1000"
            android:textColor="#3F3D3D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDevise"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/tvName"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="-112dp"
            android:layout_marginRight="-112dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="HTG/LBS"
            android:textColor="#3F3D3D"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnAdd_to_Cart"
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginEnd="-227dp"
            android:layout_marginRight="-227dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/ic_shopping_cart_black_24dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>